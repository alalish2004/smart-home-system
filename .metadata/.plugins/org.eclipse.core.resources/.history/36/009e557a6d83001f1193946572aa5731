#ifndef LED_H_
#define LED_H_


#define LED_PORT_ID      1
#define LED_RED_PIN      0
#define LED_GREEN_PIN    1
#define LED_BLUE_PIN     2
#define led_on           1  //set to one to use positive logic and to 0 to use negative logic


#if led_on
#define led_off 0
#elif
#define led_off 1
#endif




#endif /* LED_H_ */
